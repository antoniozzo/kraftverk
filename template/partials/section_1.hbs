<section id="{{referenceURI}}" class="section section--main">
	<div>
		{{#if children}}
			<div class="section-aside">
				<h4 class="section-title">
					<span class="section-number">{{numeric}}</span>
					{{header}}
				</h4>

				{{#each children}}
					<h3 class="section-subtitle">
						<a href="{{url reference}}">
							<span>{{numeric}}</span>
							{{header}}
						</a>
					</h3>
				{{/each}}
			</div>
		{{/if}}

		<div class="section-content">
			<h1 class="section-introTitle">
				{{header}}
			</h1>

			{{#if description}}
				<div class="section-intro">
					{{{description}}}
				</div>
			{{/if}}
		</div>
	</div>
</section>
